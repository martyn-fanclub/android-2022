<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.profile.ProfileFragment"
    tools:visibility="visible"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="109dp"
            android:layout_height="123dp"
            android:contentDescription="@string/profile_photo_description"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_24dp" />

        <TextView
            android:id="@+id/username"
            style="@style/HeadingTextMedium"
            android:layout_width="305dp"
            android:layout_height="49dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="-5dp"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/email"
            style="@style/MainTextRegular"
            android:textColor="@color/secondary_variant"
            android:layout_width="308dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_edit_profile"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_edit_profile"
            android:text="@string/profile_edit_btn"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_order_list"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/btn_edit_profile"
            android:text="@string/order_list"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_exit"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/btn_exit"
            android:text="@string/profile_exit_button"
            android:textColor="@color/secondary" />

    </LinearLayout>
       </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
