<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authorization.RegistrationFragment">

    <ImageView
        android:id="@+id/reg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary"
        android:scaleType="fitXY"
        tools:layout_editor_absoluteX="-52dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">


            <TextView
                android:id="@+id/reg_name"
                style="@style/HeadingTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_edit_name"
                android:layout_marginStart="6dp"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/reg_input_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_default"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                style="@style/MainTextLight"
                android:textColor="@color/black"
                android:hint="@string/profile_input_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reg_person_name" />

        <TextView
            android:id="@+id/reg_password"
            style="@style/HeadingTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_edit_password"
            android:layout_marginStart="6dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/reg_input_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_default"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            style="@style/MainTextLight"
            android:textColor="@color/neutral"
            android:hint="@string/profile_input_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_password" />

        <TextView
            android:id="@+id/reg_password_again"
            style="@style/HeadingTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_edit_password_again"
            android:layout_marginStart="6dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/reg_input_password_again"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_default"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            style="@style/MainTextLight"
            android:textColor="@color/neutral"
            android:hint="@string/profile_input_password_again"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_password_again" />

        <TextView
            android:id="@+id/reg_email"
            style="@style/HeadingTextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_edit_email"
            android:layout_marginStart="6dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/reg_input_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_default"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            style="@style/MainTextLight"
            android:textColor="@color/black"
            android:hint="@string/profile_input_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_email" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/reg_add_photo_btn"
                android:layout_height="wrap_content"
                android:text="@string/profile_add_photo"
                android:layout_width="190dp"
                android:backgroundTint="@color/primary_variant"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reg"
                style="@style/RegistrationButton"
                android:text="@string/profile_signup" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>

</FrameLayout>
